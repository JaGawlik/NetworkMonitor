<Window x:Class="NetworkMonitor.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Username" />
            <TextBox x:Name="UsernameTextBox" Margin="0,5" />
            <TextBlock Text="Password" />
            <PasswordBox x:Name="PasswordBox" Margin="0,5" />
            <Button Content="Login" Click="LoginButton_Click" Margin="0,10" />
            <TextBlock x:Name="ErrorText" Foreground="Red" Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</Window>
