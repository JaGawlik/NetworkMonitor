        <DataGrid ItemsSource="{Binding AlertGroups}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Destination IP" Binding="{Binding DestinationIp}" />
                <DataGridTextColumn Header="Alert Count" Binding="{Binding Alerts.Count}" />
                <DataGridTemplateColumn Header="Actions">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Zmień status" Command="{Binding DataContext.UpdateAlertStatusCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}" CommandParameter="{Binding Id}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
