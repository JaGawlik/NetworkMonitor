             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkMonitor.Windows.Views"
             xmlns:model="clr-namespace:NetworkMonitor.Model" xmlns:networkmonitor="clr-namespace:NetworkMonitor" d:DataContext="{d:DesignInstance Type=networkmonitor:MainWindowViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!--<TreeView ItemsSource="{Binding AlertGroups}" Margin="10">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type model:AlertGroup}" ItemsSource="{Binding Alerts}">
                    <TextBlock Text="{Binding DestinationIp}" FontWeight="Bold" />
                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Timestamp, StringFormat=yyyy-MM-dd HH:mm:ss}" Margin="0,0,10,0" />
                                <TextBlock Text="{Binding AlertMessage}" />
                            </StackPanel>
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
